<%- model_class = Partner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:busi_contact_person) %></th>
      <th><%= model_class.human_attribute_name(:busi_contact_phone) %></th>
      <th><%= model_class.human_attribute_name(:busi_contact_qq) %></th>
      <th><%= model_class.human_attribute_name(:fina_contact_person) %></th>
      <th><%= model_class.human_attribute_name(:fina_contact_phone) %></th>
      <th><%= model_class.human_attribute_name(:openning_bank) %></th>
      <th><%= model_class.human_attribute_name(:openning_bank_person) %></th>
      <th><%= model_class.human_attribute_name(:bank_acct) %></th>
      <th><%= model_class.human_attribute_name(:is_public_accounting) %></th>
      <th><%= model_class.human_attribute_name(:has_pay_announce) %></th>
      <th><%= model_class.human_attribute_name(:business_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= link_to partner.name, partner_path(partner) %></td>
        <td><%= partner.busi_contact_person %></td>
        <td><%= partner.busi_contact_phone %></td>
        <td><%= partner.busi_contact_qq %></td>
        <td><%= partner.fina_contact_person %></td>
        <td><%= partner.fina_contact_phone %></td>
        <td><%= partner.openning_bank %></td>
        <td><%= partner.openning_bank_person %></td>
        <td><%= partner.bank_acct %></td>
        <td><%= convert_boolean_cn(partner.is_public_accounting) %></td>
        <td><%= convert_boolean_cn(partner.has_pay_announce) %></td>
        <td><%= partner.business.nick_name %></td>
        <td><%= partner.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_partner_path(partner), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      partner_path(partner),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_partner_path,
            :class => 'btn btn-primary span1 margin-none' %>
<%= content_tag :span, :class => "span6" do %>
  <%= paginate @partners %>
<% end %>
