<%= render 'common/stat_nav' %>
<%= render 'stat_action_bar' %>

<%= render 'product_box' %>

<% if !params[:stat_date].blank? %>
    <div class="stat_wrapper group_buy_table_wrapper">
        <h4><%= Date.parse(params[:stat_date] + "-01").strftime("%m") %>月份团购业务统计记录</h4>
        <table id="group_buy_record_table" class="table table-striper table-bordered table_wrapper">
            <thead>
                <tr>
                    <th></th>
                    <th>项目名</th> <th>结算类型</th> <th>结算份数</th> <th>结算金额</th>
                    <th>退款份数</th> <th>操作时间</th> <th>状态</th>
                </tr>
            </thead>
            <%= content_tag_for(:tr, @group_buys) do |group_buy| %>
                <td><input type="checkbox"></td>
                <td class="product_name"><%= group_buy.product_name %></td>
                <td><%= group_buy.settle_type %></td>
                <td class="settle_nums"><%= group_buy.settle_nums %></td>
                <td><%= group_buy.settle_money %></td>
                <td class="refund_nums"><%= group_buy.refund_nums %></td>
                <td><%= group_buy.updated_at %></td>
                <td><%= group_buy.state %></td>
            <% end %>
        </table>
    </div>
<% end %>
