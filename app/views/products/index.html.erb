<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('activerecord.models.product')%></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('products.name') %></th>
      <th><%= t('products.busi_type') %></th>
      <th><%= t('products.platform') %></th>
      <th><%= t('products.selled_price') %></th>
      <th><%= t('products.settle_price') %></th>
      <th><%= t('products.is_prepay') %></th>
      <th><%= t('products.prepay_percentage') %></th>
      <th><%= t('products.begin_date') %></th>
      <th><%= t('products.end_date') %></th>
      <th><%= t('products.selled_nums') %></th>
      <th><%= t('products.created_at') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.busi_type %></td>
        <td><%= product.platform %></td>
        <td><%= product.selled_price %></td>
        <td><%= product.settle_price %></td>
        <td><%= product.is_prepay %></td>
        <td><%= product.prepay_percentage %></td>
        <td><%= product.begin_date %></td>
        <td><%= product.end_date %></td>
        <td><%= product.selled_nums %></td>
        <td><%= product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
